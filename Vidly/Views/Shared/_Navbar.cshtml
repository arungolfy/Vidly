@using Vidly.Utils
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink(Vidly.Resources.global.App_Name, "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink(Vidly.Resources.global.Home_Menu, "Index", "Home")</li>
                <li>@Html.ActionLink(Vidly.Resources.global.About_Menu, "About", "Home")</li>
                <li>@Html.ActionLink(Vidly.Resources.global.Contact_Menu, "Contact", "Home")</li>
                <li>@Html.ActionLink(Vidly.Resources.global.Test_Menu, "Test", "Movies")</li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">@Vidly.Resources.global.Language_Menu <span class="caret"></span></a>
                    <ul class="dropdown-menu" role="menu">
                        <li>@Url.LangSwitcher(Vidly.Resources.global.English_Menu, ViewContext.RouteData, "en")</li>
                        <li>@Url.LangSwitcher(Vidly.Resources.global.German_menu, ViewContext.RouteData, "de")</li>
                    </ul>
                </li>
            </ul>
        </div>

        

    </div>
</div>
